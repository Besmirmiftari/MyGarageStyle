@{
    ViewData["Title"] = "Home Page";
}


<head>
    <style>


        .slide {
            height: 300px;
            margin: 10px;
            object-fit: cover;
        }

            .slide img {
                width:inherit;
                height: auto; 
            }

        .slick-prev:before,
        .slick-next:before {
            color: black;
            font-size: 25px;
        }

        .over {
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }

    </style>
</head>

<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome To Our Website!</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
        <a class="btn btn-primary btn-xl text-uppercase" href="#products">Explore</a>
    </div>
</header>


<section class="page-section" id="products">
 
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Newest Products</h2>
            <a class="btn btn-primary text-uppercase" asp-action="Products">View All</a>

        </div>
        <div class="row" style="margin-top:50px;">


            <!-- Card deck -->
            <div class="card-deck row">

                @foreach (var pvc in ViewBag.newestProductsImages)
                {
                    string encoded = Convert.ToBase64String(pvc.DefaultImage);
                    string photo = string.Format("data:image/gif;base64,{0}", encoded);
                    <div class="col-xs-12 col-sm-6 col-md-4" style="margin-bottom:50px;">
                        <!-- Card -->
                        <div class="card">

                            <!--Card image-->
                            <div class="view overlay">
                                <a asp-area="Home" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@pvc.Id"><img class="card-img-top" src="@photo" alt="Card image cap"></a>
                                <a href="#!">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>

                            <!--Card content-->
                            <div class="card-body">

                                <!--Title-->
                                <a asp-area="" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@pvc.Id" style="color:black; text-decoration: none; "><h5 class="card-title over">@pvc.Title</h5></a>

                                <!--Text-->
                                @if (pvc.InStock)
                                {
                                    <p class="card-text">In Stock</p>
                                }
                                else
                                {
                                    <p class="card-text">Out of Stock</p>
                                }
                                <p class="card-text">Price: @pvc.Price</p>




                            </div>

                        </div>
                        <!-- Card -->
                    </div>

                }
            </div>
        </div>
        <!-- Card deck -->

    </div>





</section>
